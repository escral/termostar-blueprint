@layer components {
    .input-select {
        color: #000;
        border: none;
        appearance: unset;
        padding: 0 5px;
        border-radius: 1px;
        display: block;

        &:hover {
            outline: 1px dotted #212121;
            outline: 5px auto -webkit-focus-ring-color;
        }
    }
}
